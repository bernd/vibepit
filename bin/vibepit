usage() {
	local msg="$1"
	local name="$(basename "$0")"

	if [ -n "$msg" ]; then
		echo "$msg" 1>&2
	fi
	echo "Usage: $name [-C] [/path/to/project]" 1>&2
	echo ""
	echo " -C  Start with a clean vibepit volume. (removes /home/code)"
	exit 1
}

clean_volume="false"

while getopts ":Ch" opt; do
	case "$opt" in
		C)
			clean_volume="true"
			;;
		h)
			usage
			;;
		\?)
			usage "Invalid option: -$OPTARG"
			;;
	esac
done

# Remove parsed arguments from $@
shift "$((OPTIND - 1))"

project_root="$(realpath "${1:-"$(realpath .)"}")"
volume_name="vibepit-home"

if [ "$project_root" = "$HOME" ]; then
	echo "I don't run in your home directory. Point me to a project folder."
	exit 1
fi

docker_bin="docker"

if ! command -v "$docker_bin" >/dev/null; then
	if command -v podman >/dev/null; then
		docker_bin="podman"
	else
		echo "Missing docker or podman commands, abort."
		exit 1
	fi
fi

running_vibepit="$("$docker_bin" container ls -q -f "label=vibepit.project.dir=$project_root")"

if [ -n "$running_vibepit" ]; then
	echo "+ Attaching to running session in $project_root"
	"$docker_bin" exec -ti "$running_vibepit" /bin/bash
	exit 0
fi

if [ "$clean_volume" = "true" ]; then
	echo "+ Removing volume: $volume_name"
	"$docker_bin" volume rm "$volume_name"
fi

if [ -z "$("$docker_bin" volume ls -q -f "label=vibepit=true")" ]; then
	echo "+ Creating volume: $volume_name"
	"$docker_bin" volume create \
		--label "vibepit=true" \
		--label "vibepit.uid=$(id -u)" \
		--label "vibepit.user=$(id -u -n)" \
		"$volume_name" >/dev/null
fi

term="${TERM:-linux}"
case "$term" in
	xterm-ghostty)
		# The ghostty terminfo is not available in the container.
		term="xterm-256color"
		;;
esac

container_id="$(printf '%x%x%x' "$RANDOM" "$RANDOM" "$RANDOM")"

args=(-ti --init --rm)
args+=(--read-only --cap-drop all --security-opt=no-new-privileges)
args+=(--hostname vibes)
args+=(-e "TERM=$term")
args+=(-e "LANG=en_US.UTF-8")
args+=(-e "LC_ALL=en_US.UTF-8")
args+=(--label "vibepit=true")
args+=(--label "vibepit.uid=$(id -u)")
args+=(--label "vibepit.user=$(id -u -n)")
args+=(--label "vibepit.volume=$volume_name")
args+=(--label "vibepit.project.dir=$project_root")
args+=(--name "vibepit-$container_id")
args+=(--tmpfs /tmp)
args+=(-v "${volume_name}:/home/code")
args+=(-v "${project_root}:/src")

"$docker_bin" run ${args[*]} ghcr.io/bernd/vibepit:main
